#!/usr/bin/env bash
#installing and configuring HAProxy for load balancing

sudo apt-get update
sudo apt-get -y install --no-install-recommends software-properties-common
sudo add-apt-repository ppa:vbernat/haproxy-2.4
sudo apt-get -y install haproxy=2.4.\*

musconfig=\
"
backend shimaasalah-back
        mode http
        balance roundrobin
        server 507821-web-01 52.87.211.200:80 check
        server 507821-web-02 34.229.69.61:80 check
frontend shimaasalah-front
        bind *:80
        mode http
        default_backend shimaasalah-back
"
sudo echo "$musconfig" >> /etc/haproxy/haproxy.cfg
if [ "$(pgrep -c haproxy)" -le 0 ]; then
	sudo service haproxy start
else
	sudo sevice haproxy restart
fi
